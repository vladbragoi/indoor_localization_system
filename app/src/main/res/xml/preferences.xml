<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Fingerprinting Database">

        <EditTextPreference
            android:defaultValue="database"
            android:icon="@drawable/ic_storage_black_24dp"
            android:key="db_name"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="The name of your database"
            android:title="Name" />
        <EditTextPreference
            android:defaultValue="http://192.168.1.1:5984/"
            android:icon="@drawable/ic_insert_link_black_24dp"
            android:key="db_url"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="Your database (or hosted database) url"
            android:title="URL" />
        <EditTextPreference
            android:defaultValue="admin"
            android:icon="@drawable/ic_account_circle_black_24dp"
            android:key="username"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="Your db usarname"
            android:title="Username" />
        <EditTextPreference
            android:defaultValue="admin"
            android:icon="@drawable/ic_vpn_key_black_24dp"
            android:key="password"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="Your db password"
            android:title="Password" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Localization Database">

        <EditTextPreference
            android:defaultValue="database"
            android:icon="@drawable/ic_storage_black_24dp"
            android:key="loc_db_name"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="The name of your database"
            android:title="Name" />
        <EditTextPreference
            android:defaultValue="http://192.168.1.1:5984/"
            android:icon="@drawable/ic_insert_link_black_24dp"
            android:key="loc_db_url"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="Your database (or hosted database) url"
            android:title="URL" />
        <EditTextPreference
            android:defaultValue="admin"
            android:icon="@drawable/ic_account_circle_black_24dp"
            android:key="loc_username"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="Your db usarname"
            android:title="Username" />
        <EditTextPreference
            android:defaultValue="admin"
            android:icon="@drawable/ic_vpn_key_black_24dp"
            android:key="loc_password"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="Your db password"
            android:title="Password" />
    </PreferenceCategory>

</PreferenceScreen>